<%- include("./partials/header")%>
<div class="container">
  <div class="dashboard-container">
    <div class="dashboard-scores-container">
      <% if (user.clubs.length) { %> <% if (user.lastScore.totals.length) { %>
      <div class="dashboard-scores-mostRecentScore">Most recent Score</div>
      <div class="dashboard-scores-display">
        <div class="dashboard-score">Par: <%= user.lastScore.totals[user.lastScore.totals.length -1].totalPar %></div>
        <div>Total Score: <%= user.lastScore.totals[user.lastScore.totals.length-1].totalScore %></div>
      </div>
      <% } else { %>
      <div>No Scores yet</div>
      <% } %>
      <a class="dashboard-newScore" href="/scores/new">Add New Score</a>
      <a href="/scores">View All Scores</a>
    </div>
    <div class="dashboard-clubs-container">
      <div class="dashboard-clubs-title">Your Clubs</div>
      <div class="dashboard-clubs-display">
        <% user.clubs.forEach((club) => { %>
        <div class="dashboard-club"><%= club.name %></div>

        <% })} else { %>
        <div class="dashboard-no-clubs">
          <div class="dashboard-no-clubs-item">No Clubs yet</div>
          <div class="dashboard-no-clubs-item2">Please enter clubs</div>
        </div>
        <% } %>
      </div>
      <a href="/clubs">Update Clubs</a>
    </div>
  </div>
</div>
